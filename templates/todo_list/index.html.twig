{% extends 'base.html.twig' %}

{% block title %}TodoList{% endblock %}

{% block body %}
    <h1>TodoList</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo_list in todo_lists %}
            <tr>
                <td>{{ todo_list.name }}</td>
                <td>
                    <a href="{{ path('todo_list_show', {'id': todo_list.id}) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('todo_list_edit', {'id': todo_list.id}) }}" class="btn btn-success btn-sm">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('todo_list_new') }}" class="btn btn-info">Create new</a>
{% endblock %}
